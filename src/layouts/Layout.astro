---
interface Props {
	title?: string;
}

const { title = "Framework Pranikah - Tugas → Tanggung Jawab → Hak" } = Astro.props;
---

<!doctype html>
<html lang="id">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<meta name="description" content="Kerangka praktis untuk diskusi pra-nikah yang adil, berbasis prinsip Tugas → Tanggung jawab → Hak" />
		<title>{title}</title>
	</head>
	<body>
		<slot />
	</body>
</html>

<style is:global>
	:root {
		--primary: #2563eb;
		--primary-dark: #1e40af;
		--secondary: #64748b;
		--accent: #f59e0b;
		--bg: #ffffff;
		--bg-alt: #f8fafc;
		--text: #1e293b;
		--text-muted: #64748b;
		--border: #e2e8f0;
		--success: #10b981;
		--warning: #f59e0b;
		--danger: #ef4444;
		--info: #3b82f6;
		--info-bg: #eff6ff;
		--warning-bg: #fffbeb;
		--danger-bg: #fef2f2;
	}

	* {
		box-sizing: border-box;
		margin: 0;
		padding: 0;
	}

	html {
		scroll-behavior: smooth;
	}

	body {
		font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, sans-serif;
		line-height: 1.6;
		color: var(--text);
		background-color: var(--bg);
	}

	h1, h2, h3, h4, h5, h6 {
		line-height: 1.2;
		margin-bottom: 1rem;
		font-weight: 700;
	}

	h1 { font-size: 2.5rem; }
	h2 { font-size: 2rem; }
	h3 { font-size: 1.5rem; }
	h4 { font-size: 1.25rem; }

	a {
		color: var(--primary);
		text-decoration: none;
		transition: color 0.2s;
	}

	a:hover {
		color: var(--primary-dark);
	}

	button {
		cursor: pointer;
		border: none;
		background: none;
		font-family: inherit;
	}

	ul, ol {
		padding-left: 1.5rem;
	}

	li {
		margin-bottom: 0.5rem;
	}

	strong {
		font-weight: 600;
		color: var(--text);
	}

	em {
		font-style: italic;
		color: var(--text-muted);
	}

	code {
		background-color: var(--bg-alt);
		padding: 0.2rem 0.4rem;
		border-radius: 4px;
		font-size: 0.9em;
		font-family: 'Courier New', monospace;
	}
</style>
